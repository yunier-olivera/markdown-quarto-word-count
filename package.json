{
  "name": "markdown-quarto-word-count",
  "displayName": "Markdown & Quarto Word Count",
  "description": "Word counter for Markdown & Quarto documents",
  "icon": "images/logo.png",
  "publisher": "yunierolivera",
  "author": {
    "name": "Yunier Olivera"
  },
  "version": "1.6.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "keywords": [
    "word count",
    "word counter",
    "Markdown",
    "RMarkdown",
    "Quarto",
    "text analysis"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yunier-olivera/markdown-quarto-word-count.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext",
    "onLanguage:quarto",
    "onLanguage:rmarkdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Markdown & Quarto Word Count",
      "properties": {
        "markdownQuartoWordCount.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Markdown & Quarto Word Count extension"
        }
      }
    },
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md",
          ".markdown"
        ]
      },
      {
        "id": "quarto",
        "extensions": [
          ".qmd"
        ]
      },
      {
        "id": "rmarkdown",
        "extensions": [
          ".Rmd",
          ".rmd"
        ]
      },
      {
        "id": "plaintext",
        "extensions": [
          ".txt"
        ]
      }
    ],
    "commands": [
      {
        "command": "markdown-quarto-word-count.countWords",
        "title": "Markdown & Quarto Word Count"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.76.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.3.0"
  }
}
